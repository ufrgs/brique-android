<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_card_padding_horizontal"
        android:layout_marginTop="@dimen/item_card_padding_vertical"
        android:layout_marginRight="@dimen/item_card_padding_horizontal"
        android:layout_marginBottom="@dimen/item_card_padding_vertical"
        app:cardBackgroundColor="@color/md_white_1000"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >


                <TextView
                    android:id="@+id/tv_patrimonio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textSize="16dp"
                    tools:text="patrimonio 153203" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:text="Microfone p/ Multimidia" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    tools:text="p/ multimidia; pequeno; cor bege" />

            </LinearLayout>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:tint="@color/md_blue_grey_400"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
            />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>